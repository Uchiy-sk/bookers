<!DOCTYPE html>
<html>
  <head>
    <title>WebCampBackendNew</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="/asset/index.css"></link>
  </head>

  <body>
    <p id="notice"></p>
    <h1>Books</h1>

    <div class="table">
      <div class="table-index">
        <h4 class="title">Title</h4>
        <h4 class="body">Body</h4>
        <div class="space"></div>
      </div>

      <% @books.each do |book| %>
      <div class="table-content">
        <div class="title">
          <span><%= book.title %></span>
        </div>
        <div class="body">
          <span><%= book.body %></span>
        </div>
        <div class="link">
          <%= link_to "Show", book_path(book.id) %>
        </div>
        <div class="link">
          <%= link_to "Edit", book_path(book.id) %>
        </div>
        <div class="link">
          <%= link_to "Destroy", book_path(book.id) %>
        </div>

      </div>
      <% end %>
    </div>



    <h2>New book</h2>
    <%= form_with model: Book.new do |f| %>
      <div class="new title">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>
      <div class="new body">
        <h4>Body</h4>
        <%= f.text_area :body %>
      </div>
      <div class="new submit">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>