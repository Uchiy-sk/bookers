<!DOCTYPE html>
<html>
  <head>
    <title>WebCampBackendNew</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="/asset/index.css"></link>
  </head>

  <body>
    <p id="notice"></p>
    <h1>Books</h1>

    <table>
      <thead>
        <tr class="table-index">
          <th class="title">Title</h4>
          <th class="body">Body</h4>
          <th colsan="3"></div>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
        <tr class="table-content">
          <td class="title">
            <span><%= book.title %></span>
          </td>
          <td class="body">
            <span><%= book.body %></span>
          </td>
          <td class="link">
            <%= link_to "Show", book_path(book.id) %>
          </td>
          <td class="link">
            <%= link_to "Edit", edit_book_path(book.id) %>
          </td>
          <td class="link">
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you Sure?" %>
          </td>
        </tr>
        <% end %>
      </tbody>


    </table>


    <h2>New book</h2>

    <% if @book.errors.any? %>
      <div class="error-box">
        <h2 class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="new-items">
      <%= form_with model: Book.new do |f| %>
      <div class="new-title">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="new-body">
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <div class="new-submit">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
    </div>
    <%= yield %>
  </body>
</html>