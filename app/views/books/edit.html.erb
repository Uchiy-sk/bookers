<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error-box">
    <h2 class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="new-title">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="new-body">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="new-submit">
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to "Show", book_path(@book.id) %>
  <span> | </span>
  <%= link_to "Back", "/books" %>

<% end %>