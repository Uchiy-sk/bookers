<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="new title">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="new body">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="new submit">
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to "Show", book_path(@book.id) %>
  <span> | </span>
  <%= link_to "Back", "/books" %>

<% end %>